{
    "name": "webhook-platform/php",
    "description": "Official PHP SDK for Webhook Platform",
    "type": "library",
    "license": "MIT",
    "version": "1.0.1",
    "keywords": ["webhook", "webhooks", "api", "events", "delivery"],
    "authors": [
        {
            "name": "Webhook Platform",
            "email": "hello@webhook-platform.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "WebhookPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebhookPlatform\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src"
    },
    "config": {
        "sort-packages": true
    }
}
